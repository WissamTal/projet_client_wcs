{% extends 'base.html.twig' %}

{% block title %}Catégorie index{% endblock %}

{% block body %}
    <h1 class= "mt-5 mb-5 text-center">Catégorie index</h1>
    <div class="m-5">

    <table class="table table-striped table-hover table-borderless">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Slug</th>
                <th>Nombre min d'action</th>
                <th>Nombre max d'action</th>
                <th>Description</th>
                <th>PrefixClassification</th>
                <th>ShareValue</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.slug }}</td>
                <td>{{ category.nbMinAction }}</td>
                <td>{{ category.nbMaxAction }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.prefixClassification }}</td>
                <td>{{ category.shareValue }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}">Aperçu</a>
                    /
                    <a href="{{ path('category_edit', {'id': category.id}) }}">Modification</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
<section class="btn btn-light m-3">
    <a href="{{ path('category_new') }}">Créer une nouvelle catégorie</a>
</section>

{% endblock %}
