{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <h1 class= "mt-5 mb-5 text-center">Catégorie</h1>
    <section class="m-5">

    <table class="table">
        <tbody class="table-light">
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ category.slug }}</td>
            </tr>
            <tr>
                <th>NbMinAction</th>
                <td>{{ category.nbMinAction }}</td>
            </tr>
            <tr>
                <th>NbMaxAction</th>
                <td>{{ category.nbMaxAction }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>PrefixClassification</th>
                <td>{{ category.prefixClassification }}</td>
            </tr>
            <tr>
                <th>ShareValue</th>
                <td>{{ category.shareValue }}</td>
            </tr>
        </tbody>
    </table>
</section>
<div class="btn btn-light m-5">
    <a href="{{ path('category_edit', {'id': category.id}) }}">éditer</a>
</div>
<section class="text-center">
    <div class="btn btn-light">
    {{ include('category/_delete_form.html.twig') }}
    </div>
</section>
 <div class="btn btn-light m-5">
     <a href="{{ path('category_index') }}">Retour à la liste</a>
 </div>



{% endblock %}
