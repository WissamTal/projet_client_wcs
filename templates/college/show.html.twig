{% extends 'base.html.twig' %}

{% block title %}Collège{% endblock %}

{% block body %}
    <h1 class= "mt-5 mb-5 text-center">Collège</h1>

    <section class="m-5">

    <table class="table">
        <tbody class="table-light">
            <tr>
                <th>Id</th>
                <td>{{ college.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ college.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ college.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ college.description }}</td>
            </tr>
            <tr>
                <th>NbVotingRight</th>
                <td>{{ college.nbVotingRight }}</td>
            </tr>
            <tr>
                <th>PrefixClassification</th>
                <td>{{ college.prefixClassification }}</td>
            </tr>
        </tbody>
    </table>
</section>
<div class="btn btn-light m-5">
    <a href="{{ path('college_edit', {'id': college.id}) }}">éditer</a>
</div>

<section class="text-center">
<div class="btn btn-light">
    {{ include('college/_delete_form.html.twig') }}
</div>
</section>

<div class="btn btn-light m-5">
    <a href="{{ path('college_index') }}">Retour à la liste</a>
</div>

{% endblock %}
