{% extends 'base.html.twig' %}

{% block title %}- Contact
{% endblock %}

{% block navbar %}
	{% include 'home/_navbar.html.twig' %}
{% endblock %}

{% block body %}
	<!--================ Banner start =================-->
	<section class="hero-banner hero-banner--sm mb-30px">
		<div class="container">
			<div class="text-center">
				<div class="hero-banner--sm__content">
					<h1>Nous contacter</h1>
					<h6>Votre intérêt est crucial pour le développement de notre projet.<br>Alors écrivez-nous !</h6>
				</div>
			</div>
		</div>
	</section>
	<!--================ Banner end =================-->

	<!-- ================ contact section start ================= -->
	<section class="section-margin">
		<div class="container">
			{% for message in app.flashes('success') %}
				<div class="alert alert-success text-center">
					{{ message }}
				</div>
			{% endfor %}
			<div class="row">
				<div class="col-lg-5 col-xl-4 mb-4 mb-lg-0">
					<div class="media contact-info d-flex flex-row">
						<span class="material-icons">home</span>
						<div class="media-body">
							<h3>Technopole Izarbel</h3>
							<p>97 allée Théodore Monod<br>64210 BIDART</p>
						</div>
					</div>
					<div class="media contact-info d-flex flex-row">
						<span class="material-icons">phone_android</span>
						<div class="media-body">
							<h3>
								<a class="m-0" href="tel:0033616834952">06 16 83 49 52</a>
							</h3>
							<p>Lundi au Vendredi<br>10:00 - 19:00</p>
						</div>
					</div>
					<div class="media contact-info d-flex flex-row">
						<span class="material-icons">email</span>
						<div class="media-body">
							<h3>
								<a href="mailto:lejuristemoderne@gmail.com">lejuristemoderne@gmail.com</a>
							</h3>
							<p>Votre avis nous intéresse !</p>
						</div>
					</div>
				</div>
				<div class="col-lg-7 col-xl-8">
					<section class="form-contact contact_form">
						{{ form_start(contactForm) }}
						<div class="row">
							<div class="col-lg-5 col-xl-4">
								<div class="form-group">
									{{ form_label(contactForm.nom, 'Nom',{'label_attr': {'class': 'form-control text-secondary'}}) }}
									{{ form_errors(contactForm) }}
									{{ form_widget(contactForm.nom) }}
								</div>
								<div class="form-group">
									{{ form_label(contactForm.email, 'Email',{'label_attr': {'class': 'form-control text-secondary'}}) }}
									{{ form_errors(contactForm) }}
									{{ form_widget(contactForm.email) }}
								</div>
								<div class="form-group">
									{{ form_label(contactForm.sujet, 'Sujet',{'label_attr': {'class': 'form-control text-secondary'}}) }}
									{{ form_errors(contactForm) }}
									{{ form_widget(contactForm.sujet) }}
								</div>
							</div>
							<div class="col-lg-7 col-xl-8">
								<div class="form-group">
									{{ form_label(contactForm.message, 'Saisissez votre message', {'label_attr': {'class': 'form-control text-secondary w-100'}}) }}
									{{ form_errors(contactForm) }}
									{{ form_widget(contactForm.message, {'attr': {'class': 'different-control'}}) }}
								</div>
							</div>
						</div>
						<div class="form-group text-center text-md-right my-3 d-flex flex-row-reverse">
							<button type="submit" class="button button-light">Envoyer</button>
						</div>
						{{ form_end(contactForm) }}
					</section>
				</div>
			</div>
		</div>
	</section>

	<!-- ================ contact section end ================= -->

{% endblock %}

{% block footer %}
	{% include 'home/_footer.html.twig' %}
{% endblock %}
